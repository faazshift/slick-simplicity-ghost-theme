<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    <!--[if lte IE 8]><script src="{{asset "js/html5shiv.js"}}"></script><![endif]-->

    {{! Styles'n'Scripts }}
    <!-- jQuery -->
    <script src="{{asset "js/jquery.min.js"}}" ></script>

    <!-- SkelJS Framework by n33co -->
    <script src="{{asset "js/skel.min.js"}}"></script>
    <script src="{{asset "js/skel-layers.min.js"}}"></script>

    <script type="text/javascript">
        var themeUrl = '{{@blog.url}}';
    </script>

    <!-- Main JS Initialization -->
    <script src="{{asset "js/init.js"}}"></script>
    <link href='https://fonts.googleapis.com/css?family=Megrim:400' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather+Sans:300,700' rel='stylesheet' type='text/css'>

    <noscript>
        <link rel="stylesheet" href="{{asset "css/skel.css"}}" />
        <link rel="stylesheet" href="{{asset "css/style.css"}}" />
        <link rel="stylesheet" href="{{asset "css/style-xlarge.css"}}" />
    </noscript>

    <link rel="stylesheet" href="{{asset "css/cust.css"}}" />

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-12953670-6', 'auto');
        ga('send', 'pageview');
    </script>

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body id="top" class="{{body_class}}">

    {{>header/header-default}}

    {{! Everything else gets inserted here }}
    {{{body}}}

    <!-- Footer -->
    <footer id="footer">
        <div class="rss"><a href="{{blog.url}}/rss/" class="icon fa-rss"></a></div>
        <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
    </footer>


    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

</body>
</html>
